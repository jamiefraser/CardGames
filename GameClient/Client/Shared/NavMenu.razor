@using Microsoft.AspNetCore.Components

    <MatButton Label="Menu" OnClick="@OnClick" RefBack="@buttonForwardRef"></MatButton>
    <MatMenu @ref="Menu" TargetForwardRef="@buttonForwardRef">
        <MatList>
            <MatListItem>
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </MatListItem>
            <MatListItem>
                    <MatButtonLink class="nav-link  px-3" href="games">
                        <span class="oi oi-plus" aria-hidden="true"></span> Games
                    </MatButtonLink>
            </MatListItem>
        </MatList>
    </MatMenu>

@code
        {
    ForwardRef buttonForwardRef = new ForwardRef();
    BaseMatMenu Menu;

    public void OnClick(MouseEventArgs e)
    {
        this.Menu.OpenAsync();
    }

}

